<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="ui.ShopkeeperMenuController">

    <top>
        <Label text="Shopkeeper Menu" style="-fx-font-size: 24; -fx-font-weight: bold;" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <TableView fx:id="stockTable" prefHeight="250" prefWidth="600">
                <columns>
                    <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="colCategory" text="Category" prefWidth="200"/>
                    <TableColumn fx:id="colValue" text="Value" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>

            <GridPane hgap="10" vgap="10">
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Category:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="categoryField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Value:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="valueField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="addBtn" text="Add Item" />
                <Button fx:id="changeBtn" text="Change Price" />
                <Button fx:id="discardBtn" text="Discard Item" />
                <Button fx:id="backBtn" text="Back" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
