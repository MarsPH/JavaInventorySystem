<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.PlayerMenuController">

    <top>
        <VBox>
            <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Player Menu" />
            <Label fx:id="goldLabel" text="Gold: 0" />
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label text="Shop Stock (Click row to select for buying)" />
            <TableView fx:id="shopTable" prefHeight="200" prefWidth="600">
                <columns>
                    <TableColumn fx:id="shopColName" prefWidth="150" text="Name" />
                    <TableColumn fx:id="shopColCategory" prefWidth="150" text="Category" />
                    <TableColumn fx:id="shopColValue" prefWidth="150" text="Value" />
                    <TableColumn fx:id="shopColQuantity" prefWidth="150" text="Quantity" />
                </columns>
            </TableView>
            <Label text="Your Inventory (Click row to select for selling)" />
            <TableView fx:id="inventoryTable" prefHeight="200" prefWidth="600">
                <columns>
                    <TableColumn fx:id="invColName" prefWidth="150" text="Name" />
                    <TableColumn fx:id="invColCategory" prefWidth="150" text="Category" />
                    <TableColumn fx:id="invColValue" prefWidth="150" text="Value" />
                    <TableColumn fx:id="invColQuantity" prefWidth="150" text="Quantity" />
                </columns>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>

            <HBox spacing="10">
                <Label text="Quantity:" />
                <TextField fx:id="quantityField" promptText="Enter quantity" prefWidth="100" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="buyButton" text="Buy Selected" />
                <Button fx:id="sellButton" text="Sell Selected" />
                <Button fx:id="backButton" onAction="#onBack" text="Back" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
