<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="ui.Controller"
           prefWidth="800" prefHeight="600"
           style="-fx-background-color: linear-gradient(to bottom right, #1f1c2c, #928dab);">

    <VBox alignment="CENTER" spacing="25">
        <Text text="MAIN MENU" fill="white" style="-fx-font-size: 48px; -fx-font-family: 'Consolas'; -fx-effect: dropshadow(gaussian, black, 20, 0, 0, 0);" />

        <Button fx:id="playerButton"
                text="PLAYER MENU"
                prefWidth="300"
                prefHeight="60"
                style="-fx-font-size: 20px;
                       -fx-font-family: 'Consolas';
                       -fx-text-fill: white;
                       -fx-background-radius: 10;
                       -fx-background-color: linear-gradient(to right, #4776E6, #8E54E9);
                       -fx-effect: dropshadow(gaussian, black, 15, 0, 0, 0);" />

        <Button fx:id="shopButton"
                text="SHOPKEEPER MENU"
                prefWidth="300"
                prefHeight="60"
                style="-fx-font-size: 20px;
                       -fx-font-family: 'Consolas';
                       -fx-text-fill: white;
                       -fx-background-radius: 10;
                       -fx-background-color: linear-gradient(to right, #4776E6, #8E54E9);
                       -fx-effect: dropshadow(gaussian, black, 15, 0, 0, 0);" />

        <Button fx:id="exitButton"
                text="EXIT"
                prefWidth="300"
                prefHeight="60"
                style="-fx-font-size: 20px;
                       -fx-font-family: 'Consolas';
                       -fx-text-fill: white;
                       -fx-background-radius: 10;
                       -fx-background-color: linear-gradient(to right, #4776E6, #8E54E9);
                       -fx-effect: dropshadow(gaussian, black, 15, 0, 0, 0);" />
    </VBox>
</StackPane>
